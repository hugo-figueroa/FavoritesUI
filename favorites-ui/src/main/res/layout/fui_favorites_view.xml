<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linConditions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imgvConditionType"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imgvPlusLevel"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imgvImported"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imgvFreeShipping"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter" />

        </LinearLayout>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imgvProduct"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imgvFavorite"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp"
            android:padding="5dp"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_nd_ic_add_fav_on_32" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>